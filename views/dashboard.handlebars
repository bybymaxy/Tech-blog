<section>
  <h1>Dashboard</h1>

  {{#if user}}
    <p>Hello, {{user.username}}!</p>

    {{#each user.posts}}
      <article>
        <h2>{{this.title}}</h2>
        <p>{{this.content}}</p>
        <p>Posted on {{this.createdAt}}</p>
        <a href="/edit/{{this.id}}">Edit</a>
        <a href="/delete/{{this.id}}">Delete</a>
      </article>
    {{/each}}

    <a href="/newpost">Add New Post</a>
  {{else}}
    <p>Please sign in to access the dashboard.</p>
  {{/if}}
</section>